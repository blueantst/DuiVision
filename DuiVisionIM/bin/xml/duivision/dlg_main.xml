			img-sep="skin:IDB_TAB_SEPERATOR--" img-hover="skins\im\tab\toolbar_hover.png"
			font="bold" item-width="50" tab-height="40" tab-left-pading="0" animate="1"
			pos="1,164,-1,-27">
